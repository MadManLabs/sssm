<h2>Servers</h2>

<table>
  <tr>
    <th>
      Hostname
    </th>
    <th>
      Last active
    </th>
    <th></th>
  </tr>
  <% @user.servers.each do |server| %>
    <tr>
      <td><%= server.hostname %></td>
      <td><%= server.last_active.created_at %></td>
      <td><a href="<%= server_path(server) %>">Show</a> | <a href="<%= edit_server_path(server) %>">Edit</a></td>
    </tr>
  <% end %>
</table>

<hr>

<a href="<%= new_server_path %>">New server</a>