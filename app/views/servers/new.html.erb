<div class="container">
  <div class="row">
    <div class="col-xl-4 offset-4">
      <h4><a href="<%= servers_path %>">Servers</a> / New server</h4>

      <%= form_for(@server, url: servers_path, method: "post") do |f| %>
        <div class="form-group">
          <label>Hostname</label>
          <%= f.text_field(:hostname, class: "form-control") %>
        </div>

        <%= f.submit("Submit", class: "btn btn-dark w-100") %>
      <% end %>
    </div>
  </div>
</div>