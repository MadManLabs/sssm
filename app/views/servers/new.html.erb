<div class="container">
  <div class="row">
    <div class="col-xl-4"></div>
    <div class="col-xl-4">
      <h4><a href="<%= servers_path %>">Servers</a> / New server</h4>

      <%= form_for(@server, url: servers_path, method: "post") do |f| %>
        <div class="form-group">
          <label>Nickname</label>
          <%= f.text_field(:nickname, class: "form-control") %>
        </div>

        <div class="text-right">
          <%= f.submit("Submit", class: "btn btn-primary") %>
        </div>
      <% end %>
    </div>
  </div>
</div>