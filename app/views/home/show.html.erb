<div class="container">
  <div class="row">
    <div class="col-xl-12">
      <div class="text-center my-5">
        <img src="/img/logo.png" class="mb-3" style="height: 100px;">
        <h2><%= t(:name) %></h2>
        <p class="lead"><%= t(:about) %></p>
      </div>


      <hr class="mb-5">

      <div class="row">
        <div class="col-xl-12 text-center">
          <img src="/img/distros/ubuntu.png" class="distro-logo">
          <img src="/img/distros/arch.png" class="distro-logo">
          <img src="/img/distros/antergos.png" class="distro-logo">
          <img src="/img/distros/centos.png" class="distro-logo">
          <img src="/img/distros/debian.png" class="distro-logo">
          <img src="/img/distros/fedora.png" class="distro-logo">
          <img src="/img/distros/manjaro.png" class="distro-logo">
          <img src="/img/distros/mint.png" class="distro-logo">
          <img src="/img/distros/raspbian.png" class="distro-logo">
          <img src="/img/integrations/slack.png" class="distro-logo">
          <img src="/img/integrations/discord.png" class="distro-logo">
        </div>
      </div>

      <hr class="my-5">

      <div class="text-center mb-5">
        <h3><%= t(:how_does_it_work) %></h3>
      </div>

      <div class="row">
        <div class="col-xl-4 mb-5 text-center">
          <img src="/img/undraw_maintenance.svg" style="height: 250px" class="mb-3">
          <h4><%= t(:step_1) %></h4>
          <p><%= t(:step_1_description) %></p>
        </div>
        <div class="col-xl-4 mb-5 text-center">
          <img src="/img/undraw_server.svg" style="height: 250px" class=" mb-3">
          <h4><%= t(:step_2) %></h4>
          <p><%= t(:step_2_description) %></p>
        </div>
        <div class="col-xl-4 mb-5 text-center">
          <img src="/img/undraw_cloud_sync.svg" style="height: 250px" class=" mb-3">
          <h4><%= t(:step_3) %></h4>
          <p><%= t(:step_3_description).html_safe %></p>
        </div>
      </div>

      <hr class="mb-5">

      <div class="row">
        <div class="col-xl-6 mb-5 text-center">
          <span data-feather="lock" class="mb-3"></span>
          <h4><%= t(:value_privacy) %></h4>
          <p><%= t(:value_privacy_description).html_safe %></p>
        </div>

        <div class="col-xl-6 mb-5 text-center">
          <span data-feather="code" class="mb-3"></span>
          <h4><%= t(:open_source) %></h4>
          <p><%= t(:open_source_description).html_safe %></p>
        </div>
      </div>

    </div>
  </div>
</div>