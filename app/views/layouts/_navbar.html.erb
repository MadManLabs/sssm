<div class="menu">
  <div class="container">
    <div class="row">
      <div class="col-xl-4">
        <a href="<%= root_path %>"><img src="/img/logo.png" class="logo"></a>
      </div>
      <div class="col-xl-8 text-right">
        <% unless @user.nil? %>
          <a href="<%= servers_path %>" class="link">Servers</a>
          <a href="<%= account_path %>" class="link"><%= @user.username %></a>
          <a href="<%= logout_path %>" class="link">Logout</a>
        <% else %>
          <a href="<%= home_path %>" class="link">Home</a>
          <a href="<%= login_path %>" class="link">Login</a>
          <a href="<%= registration_path %>" class="btn btn-primary btn-sm text-white">Create an account</a>
        <% end %>
      </div>
    </div>
  </div>
</div>