<div class="container">
  <div class="row">
    <div class="col-xl-12">
      <div class="row mb-3">
        <div class="col">
          <h4><%= @server.hostname %> / <%= t(:triggers) %></h4>
        </div>
        <div class="col text-right">
          <% unless @triggers.empty? %>
            <a href="<%= new_server_trigger_path(@server) %>" class="btn btn-sm btn-primary"><%= t(:new_trigger) %></a>
          <% end %>
        </div>
      </div>

      <div class="row">
        <div class="col-xl-12">
          <% if @triggers.empty? %>
            <div class="my-5 text-center">
              <span data-feather="zap" style="width: 45px; height: 45px" class="mb-3"></span>
              <h5><%= t(:no_trigger) %></h5>
              <p class="text-muted"><%= t(:start_creating_new_trigger) %></p>
              <a href="<%= new_server_trigger_path(@server) %>" class="btn btn-sm btn-primary"><%= t(:new_trigger) %></a>
            </div>
          <% else %>
            <div class="table-responsive">
              <table class="table">
                <tr>
                  <th><%= t(:event) %></th>
                  <th><%= t(:action) %></th>
                  <th></th>
                </tr>
                <% @triggers.each do |trigger| %>
                  <tr>
                    <td><%= trigger.name %></td>
                    <td><%= trigger.action %></td>
                    <td class="text-right">
                      <a href="<%= server_trigger_test_path(@server, trigger) %>" class="btn btn-sm btn-primary"><%= t(:send_test) %></a>
                      <a href="<%= server_trigger_path(@server, trigger) %>" class="btn btn-sm btn-danger delete"><%= t(:delete) %></a>
                    </td>
                  </tr>
                <% end %>
              </table>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
